---
import Carousel from './Carousel.astro';
import TecnoBadge from './TecnoBadge.astro';
import LinkButton from './LinkButton.astro';

export interface Props {
  id: string; // ID único de la tarjeta
  images: string[]; // URLs de las imágenes para el carrusel
  title: string; // Título de la tarjeta
  description: string; // Descripción de la tarjeta
  icons: string[];
  buttons: { text: string; iconButton: string; link: string }[];
}

const { id, images, title, description, icons, buttons } = Astro.props;
---

<div class="max-w bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <!-- Carrusel en lugar de la imagen estática -->
  <Carousel id={id} images={images} />

  <div class="p-5">
    <a href="#">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
        {title}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>

    <!-- Avatares antes del botón -->
    <div class="flex justify-center items-center space-x-2 mb-3">
        {icons.map((src) => (
          <TecnoBadge src={src} />
        ))}
      </div>
      <div class="flex flex-wrap gap-2">
        {buttons.map((button) => (
          <LinkButton 
            text={button.text} 
            iconButton={button.iconButton} 
            link={button.link} 
          />
        ))}
      </div>
  </div>
</div>

