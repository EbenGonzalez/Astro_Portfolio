---

import { contactInfo } from "../data/dataInfo";
---

<div
  class="flex items-center gap-4 p-4 bg-gray-800 text-white rounded-lg shadow-md"
>
  {
    contactInfo.map((button) => (
      <a
        href={button.href}
        {...(button.download ? { download: "" } : {})}
        class="flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-md transition-colors"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img src={button.icon} alt={`${button.text} icon`} class="w-5 h-5" />
        <span class="text-sm font-medium">{button.text}</span>
      </a>
    ))
  }
</div>
