---
export interface Props {
  text: string;
  iconButton: string;
  link: string;
}

const { text, iconButton, link } = Astro.props;
---

<a
  href={link}
  class="rounded-full border border-white/10 flex justify center items-ccenter gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition"
  target="_blank"
  rel="noopener noreferrer"
>
<img class="w-6 h-6 mr-2" src={iconButton} alt="" />
  {text}
</a>
