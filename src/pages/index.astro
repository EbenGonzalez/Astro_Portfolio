---
import Badge from '../components/Badge.astro';
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import ProfilePic from '../components/ProfilePic.astro'
import Card from '../components/Card.astro'


const cards = [
  {
    id: 'card-1',
    images: ['1.png', '2.png', '3.png'],
    title: 'Proyecto 1',
    description: 'Descripción del Proyecto 1 con detalles interesantes.',
    link: '#',
  },
  {
    id: 'card-2',
    images: ['4.png', '5.png', '6.png'],
    title: 'Proyecto 2',
    description: 'Descripción del Proyecto 2, un enfoque diferente.',
    link: '#',
  },
  {
    id: 'card-3',
    images: ['7.png', '8.png'],
    title: 'Proyecto 3',
    description: 'Descripción del Proyecto 3 con un resumen atractivo.',
    link: '#',
  },
];
---

<Layout >
	<main>
		<section class="w-full mx-auto lg:w-[740px] py-44">
			<ProfilePic></ProfilePic>
			<h1 class="text-5xl font-bold flex flex-row gap-x-4 pb-4">
				Hola, soy Eben <div class="flex justify-center items-center"> <Badge>Disponible</Badge>
				</div>
			</h1>
			<h2 class="text-xl opacity-80 ">
				Sin experiencia y Jodido.Blablablablablablalbalbalba
			</h2>
			<ul class="space-y-10">
				{cards.map((card) => (
					<li>
						<Card {...card} />
					</li>
				))}
	</section>
	</main>
	<Welcome />
</Layout>
